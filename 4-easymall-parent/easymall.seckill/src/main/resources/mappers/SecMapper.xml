<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.tedu.seckill.mapper.SecMapper">
    <select id="selectSeckills" resultType="common.pojo.Seckill">
        select * from seckill;
    </select>
    <select id="selectSeckillById" resultType="common.pojo.Seckill">
        select * from seckill where seckill_id=#{seckillId};
    </select>
    <!--更新库存-->
    <update id="decreNumber">
        update seckill set number=number-1 where
        seckill_id=#{seckillId} and number &gt; 0
        and #{now} &gt;start_time and #{now} &lt; end_time;
    </update>
    <!--成功入库-->
    <insert id="insertSuccess">
        insert into success (seckill_id,user_phone,state,create_time)
        values (#{seckillId},#{userPhone},#{state},#{createTime})
    </insert>
</mapper>












